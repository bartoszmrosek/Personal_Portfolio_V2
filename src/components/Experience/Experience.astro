---
import sopraSrc from "./sopra.jfif";
---

<style>
  .experienceWrapper {
    height: 50%;
    width: 100%;

    display: flex;
    flex-direction: row;
    justify-content: space-around;

    margin-top: 1rem;
  }

  .card {
    width: 25%;
    background-color: rgb(18, 9, 14);

    border-radius: 2rem !important;

    color: rgba(255, 255, 255, 0.61);

    display: flex;
    flex-direction: column;

    align-items: center;

    font-size: 125%;
  }

  .card:nth-of-type(1) {
    --neonBorderColor: var(--neonPink);
  }

  .card:nth-of-type(2) {
    --neonBorderColor: var(--neonGreen);
  }

  .card:nth-of-type(3) {
    --neonBorderColor: var(--neonBlue);
  }

  @media only screen and (max-width: 768px) {
    .experienceWrapper {
      flex-direction: column;
    }

    .card {
      padding: 1rem;
      margin: 0 1rem;

      width: 90%;
    }
  }
</style>

<section class="experienceWrapper" id="Experience">
  <section class="card neonBorder">
    <h1>Sopra Steria</h1>
    <h5>Intern</h5>
  </section>
  <section class="card neonBorder">
    <h1>Adient</h1>
    <h5>Intern</h5>
  </section>
  <section class="card neonBorder">
    <h1>O&amp;S Computer-Soft</h1>
    <h5>Intern</h5>
  </section>
</section>
