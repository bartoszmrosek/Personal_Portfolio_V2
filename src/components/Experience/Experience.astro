<style>
  .experienceWrapper {
    width: 100%;
    position: relative;

    display: flex;
    flex-direction: row;
    justify-content: space-around;

    padding-top: 9rem;
    padding-bottom: 4rem;
  }

  .card {
    width: 25%;
    background-color: rgb(18, 9, 14);

    padding: 1rem 2rem;

    border-radius: 2rem !important;

    color: rgba(255, 255, 255, 0.61);

    display: flex;
    flex-direction: column;

    align-items: center;

    font-size: 125%;
  }

  .card > h1 {
    text-align: center;
  }

  .card:nth-of-type(1) {
    --neonBorderColor: var(--neonPink);
  }

  .card:nth-of-type(2) {
    --neonBorderColor: var(--neonGreen);
  }

  .card:nth-of-type(3) {
    --neonBorderColor: var(--neonBlue);
  }

  .cardMainWrapper {
    height: 100%;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  .cardMain {
    padding-top: 1.5rem;
  }

  .htmlDecorators {
    width: 100%;
    height: 90%;
  }

  .htmlDecorators > .topGroup {
    position: absolute;
    top: -3rem;
  }

  .htmlDecorators > .bottomGroup {
    position: absolute;
    bottom: 1rem;
  }

  @media only screen and (max-width: 1500px) {
    .experienceWrapper {
      flex-direction: column;
      gap: 2.5rem;
      align-items: center;
    }

    .card {
      padding: 1rem;
      margin: 0 1rem;

      width: 90%;
    }

    .htmlDecorators > .topGroup {
      top: -4rem;
    }

    .htmlDecorators > .bottomGroup {
      bottom: -3rem;
    }
  }
</style>

